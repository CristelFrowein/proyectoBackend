<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
            <li>
                <a href="/products/{{this._id}}">{{this.title}}</a> - ${{this.price}}
                <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
            </li>
        {{/each}}
    </ul>

    <div class="pagination">
        {{#if prevPage}}
            <a href="?page={{prevPage}}&limit=10&sort=asc">Página anterior</a>
        {{/if}}

        <span>Página {{page}} de {{totalPages}}</span>

        {{#if nextPage}}
            <a href="?page={{nextPage}}&limit=10&sort=asc">Página siguiente</a>
        {{/if}}
    </div>

    <script>
        function addToCart(productId) {
            fetch(`/api/carts/${cartId}/products/${productId}`, { method: 'POST' });
        }
    </script>
</body>
</html>


